<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    android:background="@drawable/background_outline_black_1dp"
    android:padding="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_5sdp"
        android:gravity="start|center"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintEnd_toStartOf="@+id/cl_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Tea" />

    <TextView
        android:id="@+id/tv_price_per_unit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="start|center"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintTop_toBottomOf="@id/tv_item_name"
        app:layout_constraintStart_toStartOf="@id/tv_item_name"
        tools:text="Rp. 18.000"/>

    <TextView
        android:id="@+id/tv_total_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end|center"
        android:layout_marginStart="@dimen/_5sdp"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_item_name"
        app:layout_constraintTop_toTopOf="@+id/tv_item_name"
        tools:text="Rp. 999.600.000" />

    <ImageButton
        android:id="@+id/btn_plus"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:src="@drawable/ic_plus_black"
        android:background="@null"
        android:backgroundTint="@null"
        android:backgroundTintMode="@null"
        app:layout_constraintBottom_toBottomOf="@+id/ed_quantity"
        app:layout_constraintEnd_toEndOf="@+id/tv_total_price"
        app:layout_constraintTop_toTopOf="@+id/ed_quantity"
        app:layout_constraintVertical_bias="0.333"
        app:strokeColor="?colorOnBackground"
        android:contentDescription="@string/plus"/>

    <EditText
        android:id="@+id/ed_quantity"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_2sdp"
        android:background="@null"
        android:gravity="center"
        android:inputType="number"
        android:labelFor="@+id/ed_quantity"
        android:textSize="@dimen/_12ssp"
        android:focusable="false"
        android:clickable="false"
        android:cursorVisible="false"
        app:layout_constraintBottom_toBottomOf="@+id/tv_price_per_unit"
        app:layout_constraintEnd_toStartOf="@+id/btn_plus"
        app:layout_constraintTop_toTopOf="@+id/tv_price_per_unit"
        tools:ignore="Autofill"
        tools:text="9" />

    <ImageButton
        android:id="@+id/btn_minus"
        style="@style/ShapeAppearance.MdcShapeAppearance.SmallComponent.OutlinedCircleButton"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:src="@drawable/ic_minus_black"
        android:background="@null"
        android:backgroundTint="@null"
        android:backgroundTintMode="@null"
        app:layout_constraintBottom_toBottomOf="@+id/ed_quantity"
        app:layout_constraintEnd_toStartOf="@+id/ed_quantity"
        app:layout_constraintTop_toTopOf="@+id/ed_quantity"
        app:layout_constraintVertical_bias="0.333"
        app:strokeColor="?colorOnBackground"
        android:contentDescription="@string/minus"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cl_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="192dp" />
</androidx.constraintlayout.widget.ConstraintLayout>